<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputBox">
        <item name="background">@android:color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/plain_view_text_size</item>
<!--        <item name="android:textColor">@android:color/white</item>-->
<!--        <item name="fontFamily"></item>-->
    </style>
    <style name="BottonBox">
<!--        <item name="backgroundTint">@color/black</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="WelcomeDoctor">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="DoctorBotton">
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="DoctorNormal">
        <item name="android:textColor">@color/low_opacity_text</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tab_text</item>
    </style>
</resources>