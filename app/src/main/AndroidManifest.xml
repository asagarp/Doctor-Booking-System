<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.doctor_booking_system">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Doctor_Booking_System"
        tools:targetApi="31">
        <activity
            android:name=".forDoctor.PatientRequestActivity"
            android:exported="false" />
        <!-- Other activity declarations -->
        <activity
            android:name=".forDoctor.PatientListActivity"
            android:exported="false" />
        <activity
            android:name=".forUser.UserProfileActivity"
            android:exported="true" />
        <activity
            android:name=".forUser.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".forUser.DoctorsListActivity"
            android:exported="true" />
        <activity
            android:name=".forUser.AppointmentActivity"
            android:exported="true" />
        <activity
            android:name=".SignupActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".forUser.PatientActivity"
            android:exported="true" />
        <activity
            android:name=".forDoctor.DoctorProfileActivity"
            android:exported="true" />
        <activity
            android:name=".forDoctor.DoctorActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".forDoctor.CalenderActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>